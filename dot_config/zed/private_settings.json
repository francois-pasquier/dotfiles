{
  "icon_theme": "Material Icon Theme",
  "agent": {
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-6-latest",
    },
  },
  "buffer_font_family": "CartographCF Nerd Font",
  "buffer_font_size": 14,
  "tab_size": 2,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha",
  },
  "ui_font_family": "CartographCF Nerd Font",
  "ui_font_size": 16,
  "vim_mode": true,
  "file_scan_exclusions": ["*.cjs", "tsconfig.tsbuildinfo"],
